{
  "name": "marathon-photobooth",
  "version": "1.0.0",
  "description": "Amsterdam Marathon 2025 AI Photo Booth",
  "author": "Your Company",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-webcam": "^7.2.0",
    "axios": "^1.6.7",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "electron-start": "electron .",
    "electron-build": "electron-builder",
    "electron-pack": "electron-builder --dir",
    "preelectron-pack": "npm run react-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run react-build && electron-builder build -mwl",
    "build:win": "npm run react-build && electron-builder build --win",
    "build:mac": "npm run react-build && electron-builder build --mac",
    "build:linux": "npm run react-build && electron-builder build --linux",
    "dist": "npm run react-build && electron-builder build -mw --publish never",
    "dist:mac": "npm run react-build && electron-builder build --mac --publish never",
    "dist:win": "npm run react-build && electron-builder build --win --publish never"
  },
  "build": {
    "appId": "com.yourcompany.marathonphotobooth",
    "productName": "Marathon Photo Booth",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/splash.html",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.photography",
      "icon": "build-resources/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build-resources/entitlements.mac.plist",
      "entitlementsInherit": "build-resources/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build-resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build-resources/icon.ico",
      "uninstallerIcon": "build-resources/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Photography",
      "icon": "build-resources"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  }
}